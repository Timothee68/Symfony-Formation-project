{% extends 'base.html.twig' %}

{% block title %}Les categories{% endblock %}

{% block body %}
<div class="container">
    <div class="row">
        <h1 class="text-center"> {{ category }}</h1>
        <button type="button" class="btn btn-lg bg-secondary mt-5  mb-5 col-3 "><a href="{{ path('add_workshop', {'id': category.id}) }}">Ajout de module</a></button>
        <table id="table_id" class="table table-striped mt-4 display">
            <thead>
            <tr class="bg-secondary">
                <th scope="col ">Modules</th>
                <th scope="col">Editer</th>
                <th scope="col">supprimer</th>
            </tr>
            </thead>
            <tbody>
                {% for workshop in category.workshops %}
                <tr>
                    <td>{{ workshop }}</td>
                    <td><button type="button" class="btn btn-lg bg-secondary mt-2 "><a href="{{ path('edit_workshop', {'id': workshop.id }) }}">Editer</a></button></td>
                    <td><button type="button" class="btn btn-lg bg-secondary mt-2 "><a href="{{ path('delete_workshop', {'id': workshop.id }) }}">supprimer</a></button></td>
                </tr>
                {% endfor %}
            </tbody>
        </table>
        <button type="button" class="btn btn-lg bg-secondary mt-2 "><a href="{{ path('app_category') }}">retour</a></button>

    </div>    
</div>
{% endblock %}
