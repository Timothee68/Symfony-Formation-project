{% extends 'base.html.twig' %}

{% block title %}Les formations{% endblock %}

{% block body %}

<div class="container">
    <div class="row">
        <h1 class="text-center">Liste des formations</h1>
        <button type="button" class="btn btn-lg bg-secondary mt-5 mb-5 col-3 "><a href="{{ path('add_formation') }}">Ajouter une formation</a></button>
        <table id="table_id" class="table table-striped mt-4 display">
            <thead>
            <tr class="bg-secondary">
                <th scope="col ">Formation</th>
                <th scope="col">Cr√©e session</th>
                <th scope="col">Editer</th>
                <th scope="col">supprimer</th>
            </tr>
            </thead>
            <tbody>
                {% for formation in formations %}
                <tr>
                    <td><a href="{{ path('detail_formation' , {'id': formation.id}) }}">{{ formation.entitled }}</a></td>
                    <td><a href="{{ path('add_session', {'id': formation.id}) }}">Ajouter une session</a></td>
                    <td><button type="button" class="btn btn-lg bg-secondary mt-2 "><a href="{{ path('edit_formation' , {'id': formation.id}) }}">Editer</a></button></td>
                    <td><button type="button" class="btn btn-lg bg-secondary mt-2 "><a href="{{ path('delete_formation' , {'id': formation.id}) }}">supprimer</a></button></td>
                </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
</div>
{% endblock %}
