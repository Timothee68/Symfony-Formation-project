{% extends 'base.html.twig' %}

{% block title %}Détails formation{% endblock %}

{% block body %}
<div class="col d-flex justify-content-evenly">
    <div class="card mb-3  mt-5" style="max-width: 540px;">
        <div class="card-body">
            <h2 class="card-title text-center mb-4">{{ formation.entitled }}</h2>
            <p class="genre card-text text-center mt-2" id="genre">
            </p>
            <p class="card-text text-center"><strong>Déscriptions : </strong> </p>
            <p class="card-text fs-4">{{ formation.description }}</p>
        </div>
        <button type="button" class="btn btn-lg bg-secondary mt-2 "><a href="{{ path('app_formation') }}">retour</a></button>
    </div>
</div>     
<h2  class="text-center">liste des sessions</h2>
{% for session in formation.sessions %}
<p class="card-text fs-4 text-center"><strong><a href="{{ path('detail_session' , {'id': session.id }) }}">{{session.formation }} </a></strong>  {{session.dateStart | date('d/m/Y') ~" au "~ session.dateEnd | date('d/m/Y')}} </p>
{% endfor %}


{% endblock %}