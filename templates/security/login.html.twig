{% extends 'base.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block body %}
<form method="post">
    {% if error %}
        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    {% if app.user %}
        <div class="mb-3">
           Tu es connecter avec : {{ app.user.userIdentifier }}, <a href="{{ path('app_logout') }}">d√©connexion</a>
        </div>
    {% endif %}
    <div class="container">
        <div class="row">
            <h1 class="h3 mb-3 font-weight-normal">Please sign in</h1>
            <div class="col-6 mb-4 mt-4">
                <label for="inputEmail">Email</label>
                <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" autocomplete="email" required autofocus>
            </div>
            <div class="col-6 mb-4 mt-4">
            <label for="inputPassword">Password</label>
            <input type="password" name="password" id="inputPassword" class="form-control" autocomplete="current-password" required>
            </div>
            <div class="g-recaptcha" data-sitkey="6LeevY0hAAAAAIUmuqtPT1ma_-XfjUEITnQQlu42"></div>
            {# ici on place cet div pour avoir le recaptcha dans le login  #}
            <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
   
            {# Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
            See https://symfony.com/doc/current/security/remember_me.html #}

            <div class="checkbox mb-3">
                <label>
                    <input type="checkbox" name="_remember_me"> Remember me
                </label>
            </div>
            <div class="row">
                <div class="col-4 mb-4 mt-4">
                    <a class="" href="{{ path('app_forgot_password_request') }}">forgot password ?</a>
                </div>
            </div>
            <div class="col-4 mb-4 mt-4">
            <button class="btn btn-lg btn-primary" type="submit">Connexion</button>
            </div>
        </div>    
    </div>        
</form>
{% endblock %}
