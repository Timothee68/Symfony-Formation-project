{% extends 'base.html.twig' %}

{% block title %}Messagerie intern {% endblock %}

{% block body %}

<div class="container">
    <div class="row">
        <h1>Bienvenue sur la messagerie intern pour les formateurs</h1>  
        <div class="row">
            <div class="col">
                {% for message in messages %}
               <div class="card mb-3 mt-3" style="max-width: 540px;">
                   <div class="row g-0">
                       <div class="col-md-8">
                           <div class="card-body">
                               <h5 class="card-title">Message de : {{ message.user }}</h5>
                               <hr>
                               <p>Message :</p>
                               <p class="card-text">{{ message.content| raw }}</p>
                               <hr>
                               <p class="card-text"><small class="text-muted">Post√© le : {{ message.dateCreation | date('m/d/Y H:m') }}</small></p>
                           </div>
                       </div>
                   </div>
               </div>            
                {% endfor %}
            </div>   
        </div>
        <div class="row">
            <div class="col">
                {{ form_start(formAddMessage) }}
                {{ form_errors(formAddMessage) }}
                    <div class="container">
                        <div class="row">
                            <div class="col-12 mb-4 mt-4">
                                {{ form_row(formAddMessage.content ) }}
                            </div>                                                                       
                            <div class="row">
                                <div class="col-4 mt-4">   
                                    {{ form_row(formAddMessage.submit, { 'label': 'Envoyer' }) }}
                                </div>
                            </div>     
                        </div>   
                    </div> 
                 {{ form_end(formAddMessage) }}
            </div>     
        </div>  
    </div>
</div>


{% endblock %}


